<% if(points.length>0) { -%>
<div
  class="container mx-auto px-4 sm:px-8 p-4 flex items-center justify-center h-full"
>
  <div class="py-8">
    <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
      <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
        <table class="min-w-auto leading-normal">
          <thead>
            <tr>
              <th
                class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
              >
                Name
              </th>
              <th
                class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
              >
                Min age
              </th>
              <th
                class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
              >
                Max age
              </th>
              <th
                class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
              >
                Points
              </th>
              <th
                class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
              ></th>
            </tr>
          </thead>

          <tbody>
            <% for(var i=0; i< points.length;i++) { %>
            <tr>
              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                <p class="text-gray-900 whitespace-no-wrap">
                  <%= points[i].name%>
                </p>
              </td>
              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                <p class="text-gray-900 whitespace-no-wrap">
                  <%= points[i].minAge%>
                </p>
              </td>
              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                <p class="text-gray-900 whitespace-no-wrap">
                  <%= points[i].maxAge%>
                </p>
              </td>
              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                <p class="text-gray-900 whitespace-no-wrap">
                  <%= points[i].pointsGiven%>
                </p>
              </td>
              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                <form action="/points/edit/<%= points[i]._id%>" method="get">
                  <button
                    type="submit"
                    class="px-3 py-2 text-xs font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                  >
                    Edit
                  </button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>

        <div
          class="px-5 py-5 bg-white border-t flex flex-col xs:flex-row items-center xs:justify-center"
        >
          <div class="inline-flex mt-2 xs:mt-0">
            <a
              href="/points/list?page=<%= prevPage %>"
              class="text-sm bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-l"
              >Prev</a
            >
            <a
              href="/points/list?page=<%= nextPage %>"
              class="text-sm bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-l"
              >Next</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } else {%>
<div class="flex flex-wrap overflow-hidden items-center justify-center">
  <h1 class="text-5xl text-gray-800">No points</h1>
</div>
<% }%>
