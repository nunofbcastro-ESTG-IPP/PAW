<div class="container x-3/4 p-5">
  <div class="grid grid-cols-2 items-center justify-center h-full">
    <div class="flex justify-end pr-10">
      <img
        src="/images/books/<%= book.image %>"
        class="object-cover h-auto w-72"
      />
    </div>
    <div>
      <h1 class="text-4xl font-normal leading-normal text-slate-800">
        <%= book.title %>
      </h1>
      <h2
        class="text-2xl font-normal leading-normal mt-0 mb-2 text-neutral-800"
      >
        of <%= book.author %>
      </h2>
      <h3>Publisher: <%= book.publishers %> â€§ ISBN: <%= book.isbn %></h3>
      <h3>
        Language:
        <img
          class="h-10 inline"
          src="https://unpkg.com/language-icons/icons/<%= book.lang %>.svg"
        />
      </h3>
      <h3>Descrition: <%= book.descrition %></h3>
      <br />
      <h2>New State Stock: <%= book.price[0].stock %></h2>
      <h2>Old State Stock: <%= book.price[1].stock %></h2>
      <br />
      <% if(typeof userProfile != "undefined" && userProfile.role != "Client"){
      %>
      <form action="/book/removeBook/<%= book._id %>" method="post">
        <a
          href="/book/purchaseBook/<%= book._id %>"
          class="mt-8 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Buy now
        </a>
        <a
          href="/book/editBook/<%= book._id %>"
          class="mt-8 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Edit
        </a>
        <button
          type="submit"
          class="mt-8 text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
        >
          Delete
        </button>
      </form>
      <% } %>
    </div>
  </div>
</div>
